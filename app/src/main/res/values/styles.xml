<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.TabLayout.LearningManager">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/text_black</item>
        <item name="tabTextColor">@color/text_black_60_opacity</item>
        <item name="tabIndicatorColor">@color/text_black</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:letterSpacing">1.0</item>
    </style>

    <style name="TabTextAppearance" parent="Bold.12">
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Action.LearningManager">
        <item name="android:textAppearance">@style/SemiBold.12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SortFilterButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textAppearance">@style/Regular.12</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="FilterButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/spacing_18</item>
        <item name="cornerSizeBottomLeft">@dimen/spacing_18</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="SortButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/spacing_18</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/spacing_18</item>
    </style>

    <style name="ItemAvatarShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CircleAvatarShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAppearance">@style/SemiBold.17</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/spacing_8</item>
    </style>

    <style name="PrimaryOutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:height">48dp</item>
        <item name="android:textAppearance">@style/SemiBold.17</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/spacing_8</item>
    </style>


    <style name="ActionButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearanceOverlay">@style/ActionButtonShape</item>
        <item name="android:textAppearance">@style/Regular.13</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/spacing_8</item>
    </style>

    <style name="ActionButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/spacing_16</item>
        <item name="cornerSizeTopLeft">@dimen/spacing_16</item>
        <item name="cornerSizeBottomLeft">@dimen/spacing_16</item>
        <item name="cornerSizeBottomRight">@dimen/spacing_16</item>
    </style>

    <style name="MaterialAlertDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogRoundedTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogRoundedBody</item>
        <item name="textAppearanceButton">@style/MaterialAlertDialogRoundedButton</item>
    </style>

    <style name="MaterialAlertDialogRoundedTitle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/SemiBold.16</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="MaterialAlertDialogRoundedBody" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">@style/Regular.13</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="MaterialAlertDialogRoundedButton" parent="SemiBold.14">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.09</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/spacing_8</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textAppearance">@style/SemiBold.12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

</resources>